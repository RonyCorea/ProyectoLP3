@page "/Productos/Editar/{Codigo}"

<EditForm Model="@product">
<DataAnnotationsValidator/>
<h3>Editar Producto</h3>
<hr />

<div class="form-group row">
    <label for="Codigo" class="col-sm-2 col-form-label"> 
        Código
    </label>
    <div class="col-sm-10">
        <InputText id="Codigo" class="form-control" placeholder="Código" @bind-Value=product.Codigo/>
        <ValidationMessage For="@(() => product.Codigo)"/>
    </div>
</div>


<div class="form-group row">
    <label for="Descripcion" class="col-sm-2 col-form-label"> 
        Descripción
    </label>
    <div class="col-sm-10">
        <InputText id="Descripcion" class="form-control" placeholder="Descripción" @bind-Value=product.Descripcion/>
        <ValidationMessage For="@(() => product.Descripcion)"/>
    </div>
</div>


